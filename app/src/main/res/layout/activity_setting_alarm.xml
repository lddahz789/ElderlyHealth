<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/titleLayout"
        layout="@layout/tool_bar" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLayout"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_10px"
        android:layout_marginRight="@dimen/size_10px">

        <TimePicker
            android:id="@+id/simpleTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

/>



    <EditText
        android:id="@+id/medicine_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100px"
        android:layout_below="@+id/minute"
        android:layout_marginLeft="@dimen/size_30px"
        android:layout_marginRight="@dimen/size_30px"
        android:layout_marginTop="@dimen/size_60px"
        android:background="@drawable/edit_bg"
        android:hint="Medicine Name"
 />

        <EditText
            android:id="@+id/medicine_amount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100px"
            android:layout_below="@+id/medicine_name"
            android:layout_marginLeft="@dimen/size_30px"
            android:layout_marginRight="@dimen/size_30px"
            android:layout_marginTop="@dimen/size_60px"
            android:background="@drawable/edit_bg"
            android:hint="Quantity"
            />

        <Button
            android:text="@string/add_alarm"
            android:textColor="@android:color/white"
            android:id="@+id/set"
            android:layout_below="@+id/medicine_amount"
            android:textSize="@dimen/size_36px"
            android:layout_marginTop="60px"
            android:layout_marginBottom="5px"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100px"
            android:background="@color/c_5cacee" />
    </LinearLayout>
</ScrollView>


</LinearLayout>